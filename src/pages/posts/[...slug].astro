---
import { getCollection } from 'astro:content';
import C64Layout from '../../layouts/C64Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<C64Layout title={`${post.data.title} - Relaxed Constraints`}>
  <article>
    <h1>{post.data.title}</h1>
    
    <div class="post-meta">
      <span>{post.data.pubDate.toDateString()}</span>
      <span style="margin: 0 0.5em;">•</span>
      <span style="display: inline-block; padding: 0.2em 0.6em; background-color: var(--accent); color: white; font-size: 0.85em; text-transform: uppercase; letter-spacing: 0.05em;">
        {post.data.category}
      </span>
    </div>
    
    <div style="margin: 2em 0; padding: 1em; background-color: var(--bg-secondary); border-left: 4px solid var(--accent);">
      <strong>Summary:</strong> {post.data.description}
    </div>
    
    <Content />
    
    <div style="margin: 3em 0 1em 0; padding-top: 1em; border-top: 2px solid var(--border);">
      <a href="/posts" style="font-size: 0.95em;">← Back to all posts</a>
    </div>
  </article>
</C64Layout>

