---
interface Props {
  title?: string;
}

const { title = "Relaxed Constraints" } = Astro.props;
---

<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>
  <link rel="icon" type="image/png" href="/favicon.png" />
  <link rel="stylesheet" href="/styles/c64.css">
  <link rel="alternate" type="application/rss+xml" title="Relaxed Constraints" href="/rss.xml" />
</head>
<body>
  <div class="crt-frame">
    <div class="screen-content">
      <header class="simple-header">
        <h1 class="site-title">Relaxed Constraints</h1>
        <p class="site-byline">by George Beck</p>
        <nav class="main-nav">
          <a href="/">Home</a>
          <a href="/posts">Posts</a>
          <a href="/reading">Reading</a>
          <a href="/about">About</a>
        </nav>
      </header>
      
      <main class="content-area">
        <slot />
      </main>
      
      <footer class="site-footer">
        <form
          class="subscribe-form"
          action="https://buttondown.com/api/emails/embed-subscribe/relaxedconstraints"
          method="post"
          target="_blank"
        >
          <div class="subscribe-row">
            <input
              type="email"
              name="email"
              placeholder="your@email.com"
              required
              class="subscribe-input"
            />
            <button type="submit" class="subscribe-btn">Subscribe</button>
          </div>
          <p class="subscribe-hint">Get notified when I publish new posts</p>
        </form>
        <div class="footer-meta">
          <span>George Beck &middot; 2026</span>
        </div>
      </footer>
    </div>
  </div>
<script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "436afa1a880240ee98e6f558b77cabe8"}'></script>
</body>
</html>

